<%= form_for(movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  
  <p>
  <%= f.label :category %><br/>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  </p>
 
  <p>
  <%= f.label :genre %><br/>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </p>

  <p>
    <%= f.label :embed_code %><br />
    <%= f.text_area :embed_code %>
  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %>